"
" ~/.vimrc
"

set tabstop=4
set nu
set modeline
set nolist
set nowrap
set textwidth=0
" set noautoindent

syntax on
colors elflord
set showmatch
set hlsearch
hi search guibg=LightBlue 
hi LineNr ctermfg=darkgrey ctermbg=black
" :noh to turn off highlighted matches

" enable mouse
set mouse=a
set ttymouse=xterm2

"set backspace=2
"set t_kb=


