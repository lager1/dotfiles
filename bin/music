#!/bin/bash
#
# set volume and play vlc playlists
# 
#
export DISPLAY=":0"
export PATH=$PATH:~/bin

playlist_dir=/home/twarnock/Music/0_playlist
playlist_file=Classical.xspf
volume=45
Z_OPT=" -Z "


##
## gather variables from getopts
##
usage() { echo "Usage: [options] [playlist-file|command]" && grep " .)\ #" $0; }
while getopts ":d:v:zlh" arg; do
  case $arg in
    d) # Specify playlist directory
      playlist_dir=${OPTARG}
      ;;
    v) # Specify volume (default is 45)
      volume=${OPTARG}
      ;;
    z) # play in order, default is random order
      Z_OPT=""
      ;;
    l) # list playlists
      ls -1 $playlist_dir
      exit 0
      ;;
    h)
      usage
      exit 0
      ;;
  esac
done
shift $((OPTIND - 1))
if [ $# -gt 0 ]; then
  playlist_file="$@"
  ## append .xspf if it was omitted
  if [ -r "$playlist_dir/$playlist_file"".xspf" ]; then
    playlist_file=$playlist_file".xspf"
  fi
fi

##
## main
##
if [ -r "$playlist_dir/$playlist_file" ]; then
  pkill vlc
  volume.sh $volume 2>&1 >/dev/null
  nohup vlc $Z_OPT "$playlist_dir/$playlist_file" >/dev/null 2>&1 &
else
  ## no playlist, check if vlcrc command
  case $playlist_file in
   -|0|+)
     echo "Got it!" ;;
   p|play|pause)
     vlcrc pause ;;
   k|kill|s|stop|end|term|terminate)
     pkill vlc ;;
   n|next) 
     vlcrc next ;;
   prev)
     vlcrc prev ;;
   z|rand|random)
     vlcrc random ;;
   *)
    (>&2 echo "could not read $playlist_file in $playlist_dir")
    usage
    exit 1
  esac


fi



exit 0
